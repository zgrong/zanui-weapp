<view catchtap="cellTap" class="cell-class zan-cell {{ isLastCell ? 'last-cell' : '' }} {{ isLink ? 'zan-cell--clickable' : '' }}">

  <view wx:if="{{ icon }}" class="zan-cell__left-icon">
    <slot name="icon">
      <zan-icon type="{{ icon }}" />
    </slot>
  </view>

  <view wx:if="{{ title }}" class="zan-cell__title">
    <slot name="title">
      {{ title }}
      <view wx:if="{{ label }}" class="zan-cell__label">{{ label }}</view>
    </slot>
  </view>

  <view wx:if="{{ value }}" class="zan-cell__value">
    <slot>
      <text>{{ value }}</text>
    </slot>
  </view>

  <view bindtap="footerTap" class="zan-cell__ft">
    <view wx:if="{{ isLink }}" class="zan-cell__right-icon">
      <zan-icon type="right-icon" />
    </view>
    <block wx:else>
      <slot name="footer"></slot>
    </block>
  </view>
</view>