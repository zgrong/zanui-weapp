<view catchtap="cellTap" class="cell-class zan-cell {{ isLastCell ? 'last-cell' : '' }} {{ isLink ? 'zan-cell--clickable' : '' }}">

  <view class="zan-cell__left-icon">
    <zan-icon wx:if="{{ icon }}" type="{{ icon }}" />
    <slot wx:else name="icon"></slot>
  </view>

  <view class="zan-cell__title">
    <block wx:if="{{ title }}">
      {{ title }}
      <view wx:if="{{ label }}" class="zan-cell__label">{{ label }}</view>
    </block>
    <slot wx:else name="title"></slot>
  </view>

  <view class="zan-cell__value">
    <block wx:if="{{ value }}">
      <text>{{ value }}</text>
    </block>
    <slot wx:else></slot>
  </view>

  <view bindtap="footerTap" class="zan-cell__ft">
    <view wx:if="{{ isLink }}" class="zan-cell__right-icon">
      <zan-icon type="right-icon" />
    </view>
    <block wx:else>
      <slot name="footer"></slot>
    </block>
  </view>
</view>